DEFINE SCHEMA

RECORD TYPE Note (
    "___recordID"            REFERENCE QUERYABLE,
    "title"                  STRING QUERYABLE SORTABLE SEARCHABLE,
    "index"                  INT64 QUERYABLE SORTABLE,
